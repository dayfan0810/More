<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    android:background="@color/skin_background"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:orientation="vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/skin_list_title"
                android:id="@+id/title"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#dd005c0f"
                android:shadowRadius="16"
                android:shadowDx="0"
                android:shadowDy="0" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category_green_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp" />
            <TextView
                android:id="@+id/subcategory_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/skin_textColor"
                android:ellipsize="end" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time_green_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp" />
            <TextView
                android:id="@+id/time_str"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/skin_textColor"
                android:ellipsize="end"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fee_green_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp" />
            <TextView
                android:id="@+id/price_range"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/skin_textColor"
                android:ellipsize="end" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_green_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp" />
            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/skin_textColor"
                />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>