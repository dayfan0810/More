<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    android:background="@color/skin_background"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/douban_movie_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/skin_textColorDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"
                android:text="美女与野兽"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/douban_movie_list_item_original_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/skin_textColorDark"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:text="Beauty and the Beast"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:id="@+id/douban_movie_list_item_genres"
                android:textColor="@color/skin_textColor"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="爱情，奇幻，歌舞"/>
        </LinearLayout>
        <TextView
            android:id="@+id/douban_movie_list_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="32sp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:textColor="@color/star_color"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/douban_movie_list_item_cover"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_default_image"/>
    </LinearLayout>
</android.support.v7.widget.CardView>